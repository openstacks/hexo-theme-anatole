.sidebar.animated.fadeInDown
  .logo-title
    .title
      img(src= url_for('images/logo@2x.png'),style="width:127px;")
      h3(title="")
        a(href="/")= config.title
      if config.subtitle
        .description
          p= config.subtitle

  ul.social-links
    if config.theme_twitter
      li
        a(href="https://twitter.com/" + config.theme_twitter)
          i.fa.fa-twitter
    if config.theme_instagram
      li
        a(href="http://instagram.com/" + config.theme_instagram)
          i.fa.fa-instagram
    if config.theme_rss
      li
        a(href= url_for(config.theme_rss))
          i.fa.fa-rss
    if config.theme_weibo
      li
        a(href="http://weibo.com/" + config.theme_weibo)
          i.fa.fa-weibo
    if config.theme_facebook
      li
        a(href="http://facebook.com/" + config.theme_facebook)
          i.fa.fa-facebook
    if config.theme_github
      li
        a(href="https://github.com/" + config.theme_github)
          i.fa.fa-github

  include footer
