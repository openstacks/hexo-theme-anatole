extends partial/layout

block site_title
    != page.title + " Â· " + config.title

block description
    - var desc = strip_html(page.excerpt) || strip_html(page.content).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 150);
    meta(name="description", content=desc)

block content
  .autopagerize_page_element: .content: .post-page
    include mixins
    +make_post(page, true)
    if page.comments
      include partial/comments
